{
    "name": "vscode-webdav",
    "displayName": "WebDAV Workspace",
    "description": "WebDAV file system provider",
    "version": "1.0.3",
    "author": {
        "name": "Miro Paskov"
    },
    "license": "MIT",
    "publisher": "kowd",
    "engines": {
        "vscode": "^1.85.0"
    },
    "activationEvents": [
        "onFileSystem:webdav",
        "onFileSystem:webdavs",
        "onStartupFinished"
    ],
    "categories": [
        "Other"
    ],
    "keywords": [
        "WebDAV"
    ],
    "main": "./out/main.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "webdav-sync",
                    "title": "WebDAV Sync",
                    "icon": "$(sync)"
                }
            ]
        },
        "views": {
            "webdav-sync": [
                {
                    "id": "webdav-sync-list",
                    "name": "Syncs"
                }
            ]
        },
        "commands": [
            {
                "command": "extension.remote.webdav.open",
                "title": "Open WebDAV Workspace...",
                "category": "Remote WebDAV"
            },
            {
                "command": "extension.remote.webdav.resetAuth",
                "title": "Reset WebDAV Authentication ...",
                "category": "Remote WebDAV"
            },
            {
                "command": "extension.remote.webdav.addSync",
                "title": "Add Sync Configuration",
                "category": "WebDAV Sync",
                "icon": "$(add)"
            },
            {
                "command": "extension.remote.webdav.syncNow",
                "title": "Sync Now",
                "category": "WebDAV Sync",
                "icon": "$(sync)"
            },
            {
                "command": "extension.remote.webdav.pauseSync",
                "title": "Pause Sync",
                "category": "WebDAV Sync",
                "icon": "$(debug-pause)"
            },
            {
                "command": "extension.remote.webdav.resumeSync",
                "title": "Resume Sync",
                "category": "WebDAV Sync",
                "icon": "$(play)"
            },
            {
                "command": "extension.remote.webdav.editSync",
                "title": "Edit Configuration",
                "category": "WebDAV Sync",
                "icon": "$(edit)"
            },
            {
                "command": "extension.remote.webdav.removeSync",
                "title": "Remove Sync",
                "category": "WebDAV Sync",
                "icon": "$(trash)"
            },
            {
                "command": "extension.remote.webdav.showSyncLog",
                "title": "Show Sync Log",
                "category": "WebDAV Sync"
            },
            {
                "command": "extension.remote.webdav.refreshSyncView",
                "title": "Refresh",
                "category": "WebDAV Sync",
                "icon": "$(refresh)"
            },
            {
                "command": "extension.remote.webdav.editPath",
                "title": "Edit Path",
                "category": "WebDAV Sync",
                "icon": "$(edit)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "extension.remote.webdav.addSync",
                    "when": "view == webdav-sync-list",
                    "group": "navigation"
                },
                {
                    "command": "extension.remote.webdav.refreshSyncView",
                    "when": "view == webdav-sync-list",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "extension.remote.webdav.syncNow",
                    "when": "view == webdav-sync-list && viewItem == syncConfig",
                    "group": "inline@1"
                },
                {
                    "command": "extension.remote.webdav.pauseSync",
                    "when": "view == webdav-sync-list && viewItem == syncConfig",
                    "group": "1_actions@1"
                },
                {
                    "command": "extension.remote.webdav.resumeSync",
                    "when": "view == webdav-sync-list && viewItem == syncConfig",
                    "group": "1_actions@2"
                },
                {
                    "command": "extension.remote.webdav.editSync",
                    "when": "view == webdav-sync-list && viewItem == syncConfig",
                    "group": "2_config@1"
                },
                {
                    "command": "extension.remote.webdav.removeSync",
                    "when": "view == webdav-sync-list && viewItem == syncConfig",
                    "group": "2_config@2"
                },
                {
                    "command": "extension.remote.webdav.showSyncLog",
                    "when": "view == webdav-sync-list && viewItem == syncConfig",
                    "group": "3_log@1"
                },
                {
                    "command": "extension.remote.webdav.editPath",
                    "when": "view == webdav-sync-list && viewItem == syncDetail-local-editable",
                    "group": "inline@1"
                },
                {
                    "command": "extension.remote.webdav.editPath",
                    "when": "view == webdav-sync-list && viewItem == syncDetail-remote-editable",
                    "group": "inline@1"
                }
            ]
        },
        "configuration": {
            "title": "WebDAV Sync",
            "properties": {
                "webdav.autoSync.enabled": {
                    "type": "boolean",
                    "default": true,
                    "scope": "resource",
                    "description": "Enable auto-sync functionality"
                },
                "webdav.autoSync.configurations": {
                    "type": "array",
                    "default": [],
                    "scope": "resource",
                    "description": "List of sync configurations"
                }
            }
        },
        "viewsWelcome": [
            {
                "view": "explorer",
                "contents": "Open a WebDAV folder as a remove workspace.\n[Open WebDAV](command:extension.remote.webdav.open)",
                "when": "workspaceFolderCount == 0"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "build": "npm run esbuild-base -- --sourcemap",
        "watch": "npm run esbuild-base -- --sourcemap --watch",
        "lint": "eslint src --ext ts",
        "test": "jest",
        "package": "vsce package"
    },
    "icon": "icon.png",
    "badges": [],
    "repository": {
        "type": "git",
        "url": "https://github.com/kowd/vscode-webdav"
    },
    "bugs": {
        "url": "https://github.com/kowd/vscode-webdav/issues"
    },
    "readmeFilename": "README.md",
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "20.x",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "@vscode/vsce": "^3.2.1",
        "esbuild": "^0.23.1",
        "eslint": "^8.57.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.2.5",
        "typescript": "^5.5.4"
    },
    "dependencies": {
        "date-fns": "^2.29.3",
        "minimatch": "^9.0.5",
        "webdav": "^4.11.2"
    }
}
